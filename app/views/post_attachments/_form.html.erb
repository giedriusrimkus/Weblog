<%= form_for(@post_attachment) do |f| %>
	<%= image_tag @post_attachment.post_image %>
	<div class="field">
	    <%= f.label :post_id %><br>
		<%= f.number_field :post_id %>
	  </div>
	  <div class="field">
	    <%= f.label :post_image %><br>
	    <%= f.file_field :post_image %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
<% end %>