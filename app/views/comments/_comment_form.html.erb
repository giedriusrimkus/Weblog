<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.text_field :commenter, class: "comment_author_field", placeholder: "Name" %>
	</p>
	<p>
	    <%= f.text_area :body, class: "comment_body_field", placeholder: "Comment" %>
	</p>
	<p>
		<%= f.submit "Save", class: "btn btn-default" %>
	</p>
<% end %>
